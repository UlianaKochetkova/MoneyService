pipeline {
    agent any
    environment {
        dockerContainerName = 'moneyservice'
        dockerImageName = 'moneyservice-api'
        jobName = 'deploy_pipeline_test-api'
    }
    stages {
        stage('Copy Artifacts from build_test_job') {
            steps {
                script {
                    step([$class     : 'CopyArtifact',
                          projectName: 'build_test_job/com$MoneyService',
                          filter     : "**/*.jar",
                          target     : 'temp_money_service1'])
                }
            }
        }

//        stage('Clean Container') {
//            steps {
//                sh 'docker ps -f name=${dockerContainerName} -q | xargs --no-run-if-empty docker container stop'
//                sh 'docker container ls -a -fname=${dockerContainerName} -q | xargs -r docker container rm'
//                sh 'docker images -q --filter=reference=${dockerImageName} | xargs docker rmi -f'
//            }
//        }
        stage('Clean Container') {
            steps {
                sh 'docker ps -f name=${dockerContainerName} -q | xargs --no-run-if-empty docker stop ${dockerContainerName}'
                sh 'docker container ls -a -fname=${dockerContainerName} -q | xargs -r --no-run-if-empty docker rm ${dockerContainerName}'
                sh 'docker images -q --filter=reference=${jobName} | xargs --no-run-if-empty docker rmi -f'
            }
        }

        stage('Docker compose up') {
            steps {
                sh 'docker compose up -d'
            }
        }
    }
}